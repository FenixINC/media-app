<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_nav_graph"
    app:startDestination="@id/splash_fragment">

    <!--  SplashFragment  -->
    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.example.media_app.presentation.splash.SplashFragment"
        android:label=" "
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_home_graph"
            app:destination="@+id/home_nav_graph" />

        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@+id/login_fragment" />

        <action
            android:id="@+id/action_splash_to_news"
            app:destination="@+id/news_fragment" />
    </fragment>

    <!--  LoginFragment  -->
    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.media_app.presentation.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_news"
            app:destination="@id/news_fragment" />

        <action
            android:id="@+id/action_login_to_create_account"
            app:destination="@id/create_account_fragment" />
    </fragment>

    <!--  CreateAccountFragment  -->
    <fragment
        android:id="@+id/create_account_fragment"
        android:name="com.example.media_app.presentation.create_account.CreateAccountFragment"
        android:label="@string/header_create_account"
        tools:layout="@layout/fragment_create_account">

        <action
            android:id="@+id/action_create_account_to_news"
            app:destination="@+id/news_fragment" />
    </fragment>
</navigation>